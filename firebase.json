{
  "hosting": [
    {
      "target": "staging",
      "public": "build",
      "predeploy": [
        "npm run build"
      ],
      "redirects": [
        {
          "source": "/twitter",
          "destination": "https://twitter.com/thedbk",
          "type": 301
        },
        {
          "source": "/facebook",
          "destination": "https://www.facebook.com/TheDiamondback/",
          "type": 301
        },
        {
          "source": "/online",
          "destination": "http://www.dbknews.com/",
          "type": 301
        },
        {
          "source": "/404",
          "destination": "/404.html",
          "type": 301
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "production",
      "public": "build",
      "predeploy": [
        "npm run build"
      ],
      "redirects": [
        {
          "source": "/twitter",
          "destination": "https://twitter.com/thedbk",
          "type": 301
        },
        {
          "source": "/facebook",
          "destination": "https://www.facebook.com/TheDiamondback/",
          "type": 301
        },
        {
          "source": "/online",
          "destination": "http://www.dbknews.com/",
          "type": 301
        },
        {
          "source": "/404",
          "destination": "/404.html",
          "type": 301
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}